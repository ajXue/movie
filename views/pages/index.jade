extends ../layout

block content
    .container
        .row
            a(href="/admin/list") 管理列表
            div.clearfix
            each item in movies
                .col-md-2
                    .thumbnail
                        a(href="/movie/#{item._id}")
                            img(src="#{item.poster}", alt="#{item.title}")
                        .caption
                            h3= item.title
                            p: a.btn.btn-primary(href="movie/#{item._id}", role="button") 观看预告片
